<% content_for :title do %>
  Voonami-Visitor/Visit log
<% end %>

<h3>Visitors/Visit Log</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @visitors.each do |visitor| %>
      <tr>
        <td><%= visitor.vname %></td>
        <td><%= link_to 'Show', visitor %></td>
